<nav>
  <a href="/" class="logo">Z</a>
  <div>
    <% if user_signed_in? %>
      <%= link_to "Profile", edit_user_registration_path, class: "button" %>
      <%= button_to "Logout",
      destroy_user_session_path,
      method: :delete,
      class: "button button-destruct" %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path, class: "button button-confirm" %>
      <%= link_to "Login", new_user_session_path, class: "button" %>
    <% end %>
  </div>
</nav>
