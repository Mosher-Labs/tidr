<div class="flex min-h-screen items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center text-gray-700">Edit Profile</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch, class: "mt-4" }) do |f| %>
      <div>
        <%= f.label :email, class: "block text-gray-600" %>
        <%= f.email_field :email, autocomplete: "email", class: "w-full p-2 mt-1 border rounded-lg focus:ring focus:ring-indigo-300" %>
      </div>

      <div class="mt-4">
        <%= f.label :password, "New Password (leave blank if you don't want to change)", class: "block text-gray-600" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-2 mt-1 border rounded-lg focus:ring focus:ring-indigo-300" %>
      </div>

      <div class="mt-4">
        <%= f.label :password_confirmation, "Confirm New Password", class: "block text-gray-600" %>
        <%= f.password_field :password_confirmation, class: "w-full p-2 mt-1 border rounded-lg focus:ring focus:ring-indigo-300" %>
      </div>

      <div class="mt-4">
        <%= f.label :current_password, "Current Password (to confirm changes)", class: "block text-gray-600" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full p-2 mt-1 border rounded-lg focus:ring focus:ring-indigo-300" %>
      </div>

      <div class="mt-6">
        <%= f.submit "Update", class: "w-full bg-indigo-500 text-white py-2 rounded-lg hover:bg-indigo-600 transition" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, class: "text-red-500 hover:underline" %>
    </div>

    <div class="mt-4 text-center">
      <%= link_to "Back", root_path, class: "text-indigo-500 hover:underline" %>
    </div>
  </div>
</div>

