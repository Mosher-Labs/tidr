<div class="max-w-md mx-auto mt-16 bg-white p-8 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-center mb-4">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block font-semibold" %>
      <%= f.email_field :email, class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
      <% if resource.errors[:email].present? %>
        <p class="text-red-500 text-sm mt-1"><%= resource.errors[:email].first %></p>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block font-semibold" %>
      <%= f.password_field :password, class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
      <% if resource.errors[:password].present? %>
        <p class="text-red-500 text-sm mt-1"><%= resource.errors[:password].first %></p>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirm Password", class: "block font-semibold" %>
      <%= f.password_field :password_confirmation, class: "w-full px-4 py-email2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
      <% if resource.errors[:password_confirmation].present? %>
        <p class="text-red-500 text-sm mt-1"><%= resource.errors[:password_confirmation].first %></p>
      <% end %>
    </div>

    <div class="flex justify-between items-center">
      <%= f.submit "Sign Up", class: "bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600" %>
      <%= link_to "Already have an account?", new_session_path(resource_name), class: "text-blue-500 hover:underline" %>
    </div>
  <% end %>
</div>

