<div class="flex min-h-screen items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center text-gray-700">Sign In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-4" }) do |f| %>
      <div>
        <%= f.label :email, class: "block text-gray-600" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 mt-1 border rounded-lg focus:ring focus:ring-indigo-300" %>
      </div>

      <div class="mt-4">
        <%= f.label :password, class: "block text-gray-600" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 mt-1 border rounded-lg focus:ring focus:ring-indigo-300" %>
      </div>

      <div class="mt-4 flex items-center justify-between">
        <div>
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-gray-600" %>
        </div>
        <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-indigo-500 hover:underline" %>
      </div>

      <div class="mt-6">
        <%= f.submit "Log in", class: "w-full bg-indigo-500 text-white py-2 rounded-lg hover:bg-indigo-600 transition" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-indigo-500 hover:underline" %>
    </div>
  </div>
</div>

