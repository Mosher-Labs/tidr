<div class="max-w-md mx-auto mt-16 bg-white p-8 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-center mb-4">Forgot Password?</h2>
  <p class="text-gray-600 text-center mb-6">Enter your email, and weâ€™ll send you instructions to reset your password.</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block font-semibold" %>
      <%= f.email_field :email, class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
      <% if resource.errors[:email].present? %>
        <p class="text-red-500 text-sm mt-1"><%= resource.errors[:email].first %></p>
      <% end %>
    </div>

    <div class="text-center">
      <%= f.submit "Send Reset Instructions", class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600" %>
    </div>
  <% end %>
</div>

