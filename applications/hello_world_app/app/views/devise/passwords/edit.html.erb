<div class="max-w-md mx-auto mt-16 bg-white p-8 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-center mb-4">Reset Password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-4">
      <%= f.label :password, class: "block font-semibold" %>
      <%= f.password_field :password, class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirm Password", class: "block font-semibold" %>
      <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="text-center">
      <%= f.submit "Reset Password", class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600" %>
    </div>
  <% end %>
</div>

