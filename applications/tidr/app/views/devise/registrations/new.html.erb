<div class="session-form">
  <h2>Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-field">
      <%= f.label :email %>
      <%= f.email_field :email %>
      <% if resource.errors[:email].present? %>
        <p class="input-error"><%= resource.errors[:email].first %></p>
      <% end %>
    </div>

    <div class="form-field">
      <%= f.label :password %>
      <%= f.password_field :password %>
      <% if resource.errors[:password].present? %>
        <p class="input-error"><%= resource.errors[:password].first %></p>
      <% end %>
    </div>

    <div class="form-field">
      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>
      <% if resource.errors[:password_confirmation].present? %>
        <p class="input-error"><%= resource.errors[:password_confirmation].first %></p>
      <% end %>
    </div>

    <div class="form-field session-actions">
      <%= f.submit "Sign Up", class: "button" %>
      <%= link_to "Already have an account?", new_session_path(resource_name) %>
    </div>
  <% end %>
</div>
