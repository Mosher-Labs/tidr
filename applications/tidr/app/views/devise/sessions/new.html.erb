<div class="session-form">
  <h2>Sign In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-field">
      <%= f.label :email %>
      <%= f.email_field :email %>
      <% if resource.errors[:email].present? %>
        <p class="input-error"><%= resource.errors[:email].first %></p>
      <% end %>
    </div>

    <div class="form-field">
      <%= f.label :password %>
      <%= f.password_field :password %>
      <% if resource.errors[:password].present? %>
        <p class="input-error"><%= resource.errors[:password].first %></p>
      <% end %>
    </div>

    <div class="form-field session-check">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Remember me" %>
    </div>

    <div class="form-field session-actions">
      <%= f.submit "Login", class: "button button-confirm" %>
      <%= link_to "Sign up", new_user_registration_path, class: "button" %>
      <%= link_to "Forgot password?", new_password_path(resource_name) %>
    </div>
  <% end %>
</div>
