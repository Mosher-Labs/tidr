<!-- app/views/layouts/_navbar.html.erb -->
<nav>
  <a href="/" class="logo">
    <%= image_tag(
      "tidr-full-color-transparent.webp",
      class: "light",
      width: "110",
      height: "10",
    ) %>
    <%= image_tag(
      "tidr-full-transparent.webp",
      class: "dark",
      width: "110",
      height: "10",
    ) %>
  </a>
  <div>
    <% if user_signed_in? %>
      <% if not [edit_user_registration_path].include? request.path %>
        <%= link_to "Settings", edit_user_registration_path, class: "button" %>
      <% end %>
      <% if not [users_path, root_path].include? request.path %>
        <%= link_to "Dashboard", users_path, class: "button" %>
      <% end %>
      <%= button_to "Logout",
      destroy_user_session_path,
      method: :delete,
      class: "button button-destruct" %>
    <% elsif not [new_user_password_path, new_user_session_path, new_user_registration_path].include? request.path %>
      <%= link_to "Sign up", new_user_registration_path, class: "button button-confirm" %>
      <%= link_to "Login", new_user_session_path, class: "button" %>
    <% end %>
  </div>
</nav>
